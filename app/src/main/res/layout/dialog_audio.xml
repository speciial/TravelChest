<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#07000000"
    android:elevation="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/audio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/audio_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/audio_play"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/audiodialog_play"
        app:icon="@drawable/ic_audio_play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/audio_start"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/audiodialog_start"
            app:icon="@drawable/ic_audio_record" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/audio_stop"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/audiodialog_stop"
            app:icon="@drawable/ic_audio_stop" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/audio_save"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/audiodialog_save"
        app:icon="@drawable/ic_audio_save" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/audio_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audiodialog_cancel" />

</LinearLayout>