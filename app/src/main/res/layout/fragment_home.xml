<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_card_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/home_card_pager_tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_card_pager_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        app:layout_constraintBottom_toTopOf="@+id/home_menu_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_card_pager"
        app:tabBackground="@drawable/card_indicator"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="6dp" />

    <View
        android:id="@+id/home_menu_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryLightColor"
        app:layout_constraintBottom_toTopOf="@id/home_menu_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_card_pager_tabs" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_menu_divider">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_picture"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/trans"
            android:contentDescription="@string/home_picture_content_desc"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:icon="@drawable/ic_home_camera"
            app:iconGravity="textStart"
            app:iconSize="@dimen/home_btn_icon_size"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_video"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_video"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/trans"
            android:contentDescription="@string/home_movie_content_desc"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:icon="@drawable/ic_home_movie"
            app:iconGravity="textStart"
            app:iconSize="@dimen/home_btn_icon_size"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_ar"
            app:layout_constraintStart_toEndOf="@+id/home_picture" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_ar"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/trans"
            android:contentDescription="@string/home_ar_content_desc"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:icon="@drawable/ic_home_ar"
            app:iconGravity="textStart"
            app:iconSize="@dimen/home_btn_icon_size"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_audio"
            app:layout_constraintStart_toEndOf="@id/home_video" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_audio"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/trans"
            android:contentDescription="@string/home_audio_content_desc"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:icon="@drawable/ic_home_audio"
            app:iconGravity="textStart"
            app:iconSize="@dimen/home_btn_icon_size"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_file"
            app:layout_constraintStart_toEndOf="@id/home_ar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_file"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/trans"
            android:contentDescription="@string/home_file_content_desc"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:icon="@drawable/ic_home_file"
            app:iconGravity="textStart"
            app:iconSize="@dimen/home_btn_icon_size"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_audio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>