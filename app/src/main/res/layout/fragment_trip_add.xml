<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/trip_add_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/trip_label_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/trip_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/trip_name_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trip_add_label_name"
        android:autofillHints="@string/trip_name_hint"
        android:inputType="text" />

    <RadioGroup
        android:id="@+id/trip_add_radiogroup_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_add_name">


        <RadioButton
            android:id="@+id/trip_radio_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="@string/trip_use_location" />

        <RadioButton
            android:id="@+id/trip_radio_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/trip_search_city" />

        <EditText
            android:id="@+id/trip_add_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:focusableInTouchMode="false"
            android:hint="@string/trip_city_edittext"
            android:autofillHints="@string/trip_city_edittext"
            android:inputType="text" />


    </RadioGroup>

    <TextView
        android:id="@+id/trip_add_label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/trip_label_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_add_radiogroup_location" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/trip_add_datepicker"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        app:icon="@drawable/ic_datepicker"
        android:text="@string/trip_date_button_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_add_label_date" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/trip_add_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/trip_add_the_trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_add_datepicker" />




</androidx.constraintlayout.widget.ConstraintLayout>